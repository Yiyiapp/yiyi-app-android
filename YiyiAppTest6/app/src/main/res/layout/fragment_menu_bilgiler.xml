<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.menus.MenuBilgilerFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E7EEFA "
                android:backgroundTint="#E7EEFA"
                >

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatingActionButton12"
                    android:layout_width="56dp"
                    android:layout_height="59dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:clickable="true"
                    app:backgroundTint="#FFC4B1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="?attr/actionModeCloseDrawable" />

                <TextView
                    android:id="@+id/textView120"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginTop="16dp"
                    android:text="Bilgiler"
                    android:textColor="#130F0F"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toStartOf="@+id/menuImgBtn"
                    app:layout_constraintStart_toEndOf="@+id/floatingActionButton12"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/menuImgBtn"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:backgroundTint="#E7EEFA "
                    android:scaleType="fitStart"
                    android:tint="#000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/menu" />

                <TextView
                    android:id="@+id/textView139"
                    android:layout_width="385dp"
                    android:layout_height="39dp"
                    android:layout_marginTop="60dp"
                    android:background="#52FAD5C9"
                    android:text="Ad"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView120" />

                <TextView
                    android:id="@+id/textView144"
                    android:layout_width="385dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="8dp"
                    android:background="#52FAD5C9"
                    android:text="Soyad"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView139" />

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="385dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="8dp"
                    android:background="#52FAD5C9"
                    android:ems="10"
                    android:inputType="date"
                    android:text="Doğum Tarihi"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView144" />

                <EditText
                    android:id="@+id/girisEmailText"
                    android:layout_width="385dp"
                    android:layout_height="38dp"
                    android:layout_marginTop="8dp"
                    android:background="#52FAD5C9"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:text="E Posta"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextDate" />

                <TextView
                    android:id="@+id/textView146"
                    android:layout_width="387dp"
                    android:layout_height="41dp"
                    android:layout_marginTop="8dp"
                    android:background="#52FAD5C9"
                    android:text="HES Kodu"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/girisEmailText" />

                <ImageView
                    android:id="@+id/imageView76"
                    android:layout_width="86dp"
                    android:layout_height="77dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView146"
                    app:srcCompat="@drawable/ic_baseline_lock_open_24" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#FFC4B1"
                    android:text="Şifre Değişikliği"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView76"
                    app:layout_constraintStart_toEndOf="@+id/imageView76"
                    app:layout_constraintTop_toTopOf="@+id/imageView76"
                    app:layout_constraintVertical_bias="0.588" />

                <Button
                    android:id="@+id/button4"
                    android:layout_width="404dp"
                    android:layout_height="59dp"
                    android:backgroundTint="#4CAF50"
                    android:fontFamily="@font/aclonica"
                    android:text="Güncelle"
                    android:textSize="30sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.428"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/switch2" />

                <TextView
                    android:id="@+id/textView147"
                    android:layout_width="400dp"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/amiko"
                    android:text="Bana özel kampanyalarla ilgili E Posta almak istiyorum "
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/switch1" />

                <TextView
                    android:id="@+id/textView148"
                    android:layout_width="400dp"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/amiko"
                    android:text="Bana özel kampanyalarla ilgili SMS almak istiyorum "
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView76" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginEnd="24dp"
                    android:backgroundTint="#313435"
                    android:buttonTint="#000000"
                    android:drawableTint="#2D2F31"
                    android:ellipsize="middle"
                    android:foregroundTint="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView148"
                    app:layout_constraintTop_toBottomOf="@+id/textView148" />

                <Switch
                    android:id="@+id/switch2"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginEnd="24dp"
                    android:backgroundTint="#000000"
                    android:buttonTint="#000000"
                    android:drawableTint="#FFFFFF"
                    android:ellipsize="middle"
                    android:foregroundTint="#FFFFFF"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="@+id/textView147"
                    app:layout_constraintTop_toBottomOf="@+id/textView147" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </FrameLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>