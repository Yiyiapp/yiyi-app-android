<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAD5C9"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/ilkGirisImageView"
        android:layout_width="285dp"
        android:layout_height="267dp"
        android:layout_marginTop="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yiyi_logo" />

    <Button
        android:id="@+id/ilkGirisGirisBtn"
        android:layout_width="274dp"
        android:layout_height="81dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/amiko"
        android:onClick="mainGirisBtn"
        android:text="GİRİŞ YAP"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#95BCF2"
        app:cornerRadius="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ilkGirisImageView"
        app:rippleColor="#000000" />

    <Button
        android:id="@+id/ilkGirisKayitOlBtn"
        android:layout_width="274dp"
        android:layout_height="81dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/amiko"
        android:lineSpacingExtra="36sp"
        android:onClick="mainKayitBtn"
        android:text="KAYIT OL"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="#95BCF2"
        app:cornerRadius="30dp"
        app:iconTint="#072196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ilkGirisGirisBtn"
        app:rippleColor="#FFFFFF"
        app:strokeColor="#FFFFFF" />


</androidx.constraintlayout.widget.ConstraintLayout>